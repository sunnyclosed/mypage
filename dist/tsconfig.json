{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // 开启后element-plus相关组件代码变色，可以直接看到类型和内部结构
    "types": ["element-plus/global"]
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
